{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "noEmit": false
  },
  "include": [
    "src/server.ts",
    "src/db/**/*.ts",
    "src/types/index.ts"
  ]
}
